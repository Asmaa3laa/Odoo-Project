<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="expenses_form_view" model="ir.ui.view">
            <field name="name">expenses.form.view</field>
            <field name="model">expenses</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="governorate_id"/>
                            <field name="traffic_department_id" domain="[('governorate_id', '=', governorate_id)]"/>
                            <field name="description"/>
                            <field name="amount"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="expenses_tree_view" model="ir.ui.view">
            <field name="name">expenses.tree.view</field>
            <field name="model">expenses</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="governorate_id"/>
                    <field name="traffic_department_id"/>
                    <field name="description"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>

        <record id="expenses_action" model="ir.actions.act_window">
            <field name="name">Expenses Action</field>
            <field name="res_model">expenses</field>
            <!--            <field name="view_id" ref="expenses_form_view"/>-->
            <!--            <field name="view_ids" eval="[(5, 0, 0),-->
            <!--     (0, 0, {'view_mode': 'tree', 'view_id': ref('expenses_tree_view')}),-->
            <!--     (0, 0, {'view_mode': 'form', 'view_id': ref('expenses_form_view')})-->
            <!--   ]"/>-->
        </record>

        <menuitem id="expenses_menu" name="Expenses"
                  parent="certificates_menu_root" action="expenses_action"/>
    </data>
</odoo>