<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="customer_form_view" model="ir.ui.view">
            <field name="name">customer.form.view</field>
            <field name="model">certificate.customer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="customer_tree_view" model="ir.ui.view">
            <field name="name">customer.tree.view</field>
            <field name="model">certificate.customer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>

        <record id="customer_action" model="ir.actions.act_window">
            <field name="name">Customers Action</field>
            <field name="res_model">certificate.customer</field>
<!--            <field name="view_id" ref="customer_form_view"/>-->
<!--            <field name="view_ids" eval="[(5, 0, 0),-->
<!--     (0, 0, {'view_mode': 'tree', 'view_id': ref('customer_tree_view')}),-->
<!--     (0, 0, {'view_mode': 'form', 'view_id': ref('customer_form_view')})-->
<!--   ]"/>-->
        </record>

        <menuitem id="customer_menu" name="Customers"
                  parent="certificates_menu_root" action="customer_action"/>
    </data>
</odoo>